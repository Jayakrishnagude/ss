<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE6BF"
    tools:context=".Events">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imageViewc1"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:contentDescription="@android:string/httpErrorBadUrl"
                        android:contextClickable="true"
                        android:src="@drawable/apsche"
                        android:text="https://www.jiocinema.com/sports/cricket/rajasthan-royals-vs-lucknow-super-giants/3929732" />

                    <ImageView
                        android:id="@+id/imageViewe2"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:contentDescription="@android:string/httpErrorBadUrl"
                        android:src="@drawable/jnanabhumi" />

                    <ImageView
                        android:id="@+id/imageViewe3"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:contentDescription="@android:string/httpErrorBadUrl"
                        android:src="@drawable/overseas" />

                    <ImageView
                        android:id="@+id/imageViewe4"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:contentDescription="@android:string/httpErrorBadUrl"
                        android:src="@drawable/overseas" />


                </LinearLayout>

            </HorizontalScrollView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FAEDCC"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="361dp"
                    android:orientation="vertical"
                    tools:ignore="WebViewLayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/inter_extrabold"
                        android:text="Andhra Pradesh State Council of Higher Education (APSCHE)"
                        android:textColor="#E15924"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="The Government of Andhra Pradesh has been focussing the access, inclusiveness, quality and relevance in Higher Education withspecial attention towards rural areas in all its endeavours. Accordingly the Government has been offering various programs of study in the UNiversities and Colleges. The Degrees and duration of major programmes in Higher Education as prescribed by the UGC are: apply for B.tech , Pharmacy and Agriculture , and Others..."
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/buttonc1"
                        android:layout_width="140dp"
                        android:layout_height="48dp"
                        android:layout_weight="100"
                        android:background="@drawable/red_rounded_solid"
                        android:fontFamily="@font/audiowide"
                        android:text="Apply"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FAEDCC"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/inter_extrabold"
                        android:text="National Overseas Scholorship"
                        android:textColor="#E15924"

                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="he candidates, after assessing their eligibility and suitability, as per the eligibility conditions of the scheme guidelines, can apply online to this Ministry on the portal i.e. https://nosmsje.gov.in. III How funds are reimbursed: Under the NOS scheme, the funds are not directly disbursed to the students."
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/buttone3"
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:text="Apply" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FAEDCC"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/inter_extrabold"
                        android:text="Samagra shiksha"
                        android:textColor="#E15924"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="The scheme aims to ensure that all children have access to quality education with an equitable and inclusive classroom environment which should take care of their diverse background, multilingual needs, different academic abilities and make them active participants in the learning process.
The State Govt., completed the process of Samagra Shiksha integration in the state and it is come into force from 1st November, 2019"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/buttone4"
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:text="Apply" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>